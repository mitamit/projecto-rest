{% extends 'base.html.twig' %}

{% block title %}Crear Comanda{% endblock %}
{% block stylesheets %}
    <style>
        .offset-sm-2{display: flex; justify-content: center;}
        .col-form-label{color: #CC7832; font-weight: bold; font-family: "Cooper Black"; display: flex; justify-content: center;}
        .form-control{font-family: Dialog;}
    </style>
{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <div class="col-xs-12 col-sm-6 col-md-8">
    <form id="form1" method="post" action="{{ action }}" novalidate="novalidate">
        <!-- form is based on User Entity -->
        <!--{{ dump(form.vars.value) }} Para mostrar los datos de ese formulario. -->
        <!-- http://stackoverflow.com/questions/12497133/directly-access-a-form-fields-value-when-overriding-widget-in-a-twig-template -->
        <ul>
            {% for error in form.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{ form_label(form.camarero) }}</label><div class="col-sm-10" class="form-control">{{ form_widget(form.camarero) }}</div>
        <br>
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{ form_label(form.prod1) }}</label><div class="col-sm-10" class="form-control">{{ form_widget(form.prod1) }}</div>
        <br>
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{ form_label(form.prod2) }}</label><div class="col-sm-10" class="form-control">{{ form_widget(form.prod2) }}</div>
        <br>
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{ form_label(form.prod3) }}</label><div class="col-sm-10" class="form-control">{{ form_widget(form.prod3) }}</div>
        <br><br><br>
            <div class="offset-sm-2 col-sm-6">
                <button type="submit" class="btn btn-outline-secondary offset-sm-2 col-sm-6">Crear</button>
                <a href="{{ path('app_camarero') }}" role="button" class="btn btn-outline-secondary offset-sm-2 col-sm-6">Volver</a>
            </div>


        <br>
        <br>
        </div>
        </form>
    </div>
        {% endblock %}

