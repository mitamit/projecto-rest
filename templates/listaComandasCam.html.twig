                    <th scope="col">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Estado</th>
                    <th scope="col">            </th>
                </tr>
                </thead>
                <tbody>
                {% for comanda in comandas %}
                    <tr>
                        <th scope="row">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ comanda.mesa.numero }}</th>
                        <td>{% for com in comanda.productos %}
                                Â· {{com}}
                            {% endfor %}</td>
